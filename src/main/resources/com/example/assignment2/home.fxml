<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>

<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assignment2.HomeController" styleClass="home-pane">
    <top>
        <Label text="Game Search App" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 10px;" />
    </top>
    <center>
        <ListView fx:id="searchResults" style="-fx-font-size: 16px;" />
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10px;">
            <Label text="Enter game name: " style="-fx-font-size: 16px;" />
            <TextField fx:id="searchInput" promptText="Type game name..." style="-fx-font-size: 16px;" />
            <Button fx:id="searchButton" text="Search" style="-fx-font-size: 16px; -fx-background-color: #007bff; -fx-text-fill: white;" />
        </HBox>
    </bottom>

    <stylesheets>
        <URL value="@/style.css" />
    </stylesheets>
</BorderPane>
